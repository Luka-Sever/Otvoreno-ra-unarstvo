{
   "$schema": "http://json-schema.org/draft-07/schema#",
   "$id": "https://github.com/Luka-Sever/Otvoreno-ra-unarstvo/schema.json",
   "type" : "array",
   "title": "Popis satelita koji kruže Zemljom",
   "description" : "Popis nekih satelita koji kruže Zemljom sa najčešćim svojstvima.",
     "items": {
    "type": "object",
    "properties": {
      "ime satelita": {
        "type": "string"
      },
      "drzava porijekla": {
        "type": "string"
      },
      "drzava odrzavanja": {
        "type": "string"
      },
      "vlasnik": {
        "type": "string"
      },
      "korist": {
        "type": "string"
      },
      "svrha": {
        "type": "string"
      },
      "orbita": {
        "type": "string"
      },
      "apside": {
        "type": "object",
        "properties": {
          "perigej": {
            "type": "number"
          },
          "apogej": {
            "type": "number"
          }
        },
        "required": [
          "perigej",
          "apogej"
        ]
      },
      "inklinacija": {
        "type": "number"
      },
      "period": {
        "type": "number"
      }
    },
    "required": [
      "ime satelita",
      "drzava porijekla",
      "drzava odrzavanja",
      "vlasnik",
      "korist",
      "svrha",
      "orbita",
      "apside",
      "inklinacija",
      "period"
    ]
  }
}
